---
import { getGalleryImages } from '../utils/images';
import ImageCard from './ImageCard.astro';

// Get all images
const images = await getGalleryImages();
---

<div class="flex flex-col mt-[-5px] sm:mt-[-10px] md:mt-[-15px] lg:mt-[-25px]">
  {images.map((image) => (
    <ImageCard image={image} />
  ))}
</div>

{images.length === 0 && (
  <div class="text-center">
    <h2 class="text-2xl font-bold text-gray-700">No images found</h2>
    <p class="text-gray-500 mt-2">Please check your image directory and metadata file.</p>
  </div>
)}
